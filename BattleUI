#include <stdio.h>
#include <string.h>
#include <time.h>
#include <stdlib.h>
#include <unistd.h>

#define ROWS 33
#define COLS 65

//https://www.geeksforgeeks.org/time-delay-c/
void delay(int milliseconds)
{
    milliseconds*=1000;
    clock_t start_time =clock();
    while(clock()<start_time + milliseconds);
}
void clear()
{
    printf("\e[2J\e[H");
}
void run(char screen[ROWS][COLS])
{
    int x=0;
    for(x=0;x<ROWS;x++)
    printf("%s\n",screen[x]);
}

